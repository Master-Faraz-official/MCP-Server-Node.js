
{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript target
    "module": "commonjs", // Module system for Node.js
    "rootDir": "./src", // Where your TypeScript source files are
    "outDir": "./dist", // Where compiled JavaScript will go
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file naming
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": ["src/**/*"], // Which files to include in compilation
  "exclude": ["node_modules", "** / *.spec.ts"] // Which files to exclude
}
